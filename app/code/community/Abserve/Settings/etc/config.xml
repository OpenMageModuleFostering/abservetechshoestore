<?xml version="1.0"?>
<config>
    <modules>
        <Abserve_Settings>
            <version>1.2.3</version>
        </Abserve_Settings>
    </modules>
    <frontend>
        <routers>
            <settings>
                <use>standard</use> 
                <args>
                    <module>Abserve_Settings</module>
                    <frontName>settings</frontName>
                </args>
            </settings>
        </routers>
        <layout>
            <updates>
                <settings>
                    <file>settings.xml</file>
                </settings>
            </updates>
        </layout>        
    </frontend>
    <admin>
        <routers>
           <settings>
                <use>admin</use>
                <args>
                    <module>Abserve_Settings</module>
                    <frontName>footer</frontName> 
                </args>
           </settings>             
         </routers>   
    </admin>
    <global>
        <helpers>
            <settings>
                <class>Abserve_Settings_Helper</class>
            </settings>
        </helpers>
        <blocks>
            <settings>
                <class>Abserve_Settings_Block</class>
            </settings>
        </blocks>
    </global>
    <default> 
        <settings>
            <general>
            </general>
        </settings>
    </default>
     <adminhtml>
        <menu>
            <settings module="settings">
                <title>Shoestore</title>
                <sort_order>100</sort_order>
                <children>
                    <ajaxcart module="ajaxcart">
                        <title> Shoestore Configuration </title>
                        <sort_order>1</sort_order>
                        <action>adminhtml/system_config/edit/section/settings</action>
                    </ajaxcart>
                </children>
            </settings>
        </menu>
    </adminhtml>
</config>